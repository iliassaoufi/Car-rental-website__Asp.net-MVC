
@{
    ViewBag.Title = "Ajouter_voiture";
    Layout = "~/Views/Shared/_dashboardPropr.cshtml";
}
<div class="container Account_info">
    @if (ViewBag.msg != null)
    {
        <div class='alert alert-success' role='alert' style="padding:0;margin:0;border-radius:0px;">@ViewBag.msg</div>
    }
    <div class="row">
        <h2>Ajouter une voiture</h2>
    </div>
    <div class="container">
        <form method="post" id="form" enctype="multipart/form-data">
            <div class="row row-space">

                <div class="col-lg-6">
                    <label for="Name">Nom  </label>
                    <input type="text" id="Name" name="Name" class="form-control" value="" required />
                </div>
                <div class="col-lg-6">
                    <label for="marque">Marque </label>
                    <input type="text" name="marque" class="form-control" value="" required />
                </div>
                <div class="col-lg-6">
                    <label for="Imm">Immatriculation  </label>
                    <input type="text" id="Name" name="Imm" class="form-control" value="" required />

                </div>
                <div class="col-lg-6">
                    <label for="Color">Couleur  </label>
                    <input type="text" id="Name" name="Color" class="form-control" value="" required />

                </div>
                <div class="col-lg-6">
                    <label for="kilom">Kilométrage  </label>
                    <input type="number" id="Name" name="kilom" class="form-control" value="" required />

                </div>
                <div class="col-lg-6">
                    <label for="modele">Modéle  </label>
                    <input type="number" id="Name" name="modele" class="form-control" value="" required />

                </div>
                <div class="col-lg-6">
                    <label for="transition">Transition  </label>
                    <input type="text" id="Name" name="transition" class="form-control" value="" required />
                </div>
                <div class="col-lg-6">
                    <label for="Price">Prix/jour (DH) </label>
                    <input type="number" id="Price" name="Price" class="form-control" value="" required />
                </div>
                <div class="col-lg-6 ">
                    <label for="Image">Image  <br /></label>
                    <div class="custom-file">
                        <label class="custom-file-label" for="customFile">Choose file</label>
                        <input type="file" name="image" class="custom-file-input" id="Image" required>
                    </div>
                </div>
                <div class="col-lg-6">
                    <label for="offre">C'est une offre speciale ?</label>&nbsp; &nbsp;
                    <input type="checkbox" id="offre" class="" value="" />
                    <input type="hidden" name="offre" id="offreValue" class="" value="" />
                </div>
            </div>
            <div class="row row-space">
                <div class="col-lg-12">
                    <button onclick="sub()" class="btn btn-red"> Ajouter  </button>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    function sub() {
        if (document.getElementById('form').checkValidity()) {
            if (document.getElementById('offre').checked) document.getElementById('offreValue').value = "true";
            else document.getElementById('offreValue').value = "false";
            return true;
        }
        else return false;
    }
</script>

