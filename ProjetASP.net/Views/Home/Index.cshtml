@{
    ViewBag.Title = "Home Page";
}

<section>
    <div class="s1">
        <div class="s1-bg">
            <img src="~/Content/Images/Global/undraw_navigator_a479(2).svg" />
        </div>
        <div class="s1-content ">
            <h2>CarBooking</h2>
            <p>
                CarBooking, leader mondial de la location de voitures,
                vous propose ses services au Maroc . Nous vous garantissons un large choix de voitures de location et véhicules
                utilitaires. Mini, citadine, compactes, de prestige, SUV ou 4x4, véhicules diesel ou essence.
                CarBooking a nécessairement la réponse à votre besoin à des prix pas cher.
                vivez une expérience agréable avec CarBooking.
            </p>
            <form action="/Voiture/ListVoiture" method="post">
                <div class="input-group">

                    <input name="TextRecherche" placeholder="" type="text" class="form-control form-search" aria-label="Text input with dropdown button">
                    <select name="RecherchePar" class="custom-select form-search">

                        <option value="Nom" selected>Nom de voiture</option>
                        <option value="Marque">Marque</option>
                        <option value="Couleur">Couleur</option>
                        <option value="Annee">Année</option>
                        <option value="Km">Km</option>
                        <option value="Proprietaire">Nom de propriétaire    </option>
                    </select>
                    <div class="input-group-append">
                        <button class="btn form-search" type="submit">
                            <span class="Nan-icon">
                                <i class="bi bi-search"></i>
                            </span>
                        </button>
                    </div>

                </div>
            </form>

        </div>

    </div>
</section>
<section>
    <div class="s2 container">
        <div class="row justify-content-center">
            <div class="col-md-12 ">
                <h2> Offre Spéciales </h2>

            </div>
        </div>
        <div class="row">

            @if (Model != null)
            {
                foreach (ProjetASP.net.Models.Voiture_info item in Model)
                {
                    <div class="col-md-3">
                        @Html.Partial("_VoitureCard", item)
                    </div>
                }
            }
            else
            {
                <h3>vide</h3>
            }


        </div>
    </div>
</section>

